<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="6dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/productInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/product_basic_info_label"
                style="@style/Header6"
                android:paddingTop="6dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:textColor="@color/colorPrimaryDark"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/nameInputLayout"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/productInfoLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/product_info_name"
                style="@style/DialogInputMargin">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nameInputText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textCapSentences"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/categorySpinnerLabel"
                style="@style/Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="14dp"
                android:text="@string/category_label"
                app:layout_constraintBottom_toBottomOf="@id/categorySpinner"
                app:layout_constraintStart_toStartOf="parent" />
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/categorySpinner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/addCategory"
                app:layout_constraintBottom_toBottomOf="@id/addCategory"
                app:layout_constraintStart_toEndOf="@id/categorySpinnerLabel"
                style="@style/DialogInputMargin">
            </android.support.v7.widget.AppCompatSpinner>
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/addCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/addBrand"
                app:layout_constraintTop_toBottomOf="@id/nameInputLayout"
                android:src="@drawable/ic_add"
                android:tint="@color/colorPrimary"
                android:background="?android:attr/selectableItemBackground"
                style="@style/DialogInputMargin"
                android:layout_marginStart="0dp"/>

            <TextView
                android:id="@+id/brandSpinnerLabel"
                style="@style/Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="14dp"
                android:text="@string/brand_label"
                app:layout_constraintBottom_toBottomOf="@id/brandSpinner"
                app:layout_constraintStart_toStartOf="parent" />
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/brandSpinner"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/addBrand"
                app:layout_constraintBottom_toBottomOf="@id/addBrand"
                app:layout_constraintStart_toEndOf="@id/brandSpinnerLabel"
                style="@style/DialogInputMargin">
            </android.support.v7.widget.AppCompatSpinner>
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/addBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/brandSpinner"
                app:layout_constraintTop_toBottomOf="@id/addCategory"
                android:src="@drawable/ic_add"
                android:tint="@color/colorPrimary"
                android:background="?android:attr/selectableItemBackground"
                style="@style/DialogInputMargin"/>

            <TextView
                android:id="@+id/productCodeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/brandSpinner"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/product_code_label"
                style="@style/Header6"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:paddingTop="6dp"
                android:textColor="@color/colorPrimaryDark"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/skuInputLayout"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/productCodeLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/sku_input_hint"
                style="@style/DialogInputMargin">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textCapCharacters"
                    android:id="@+id/skuInputText"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/barcodeInputLayout"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/skuInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:hint="@string/barcode_input_hint"
                style="@style/DialogInputMargin">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textCapCharacters"
                    android:id="@+id/barcodeInputText"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/productPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/barcodeInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/product_price_label"
                style="@style/Header6"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:paddingTop="6dp"
                android:textColor="@color/colorPrimaryDark" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/importPriceInputLayout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/productPriceLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/import_price_hint"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                style="@style/DialogInputMargin">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberPassword"
                    android:id="@+id/importPriceInputText"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/quantityInputLayout"
                style="@style/DialogInputMargin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/quantity_hint"
                app:layout_constraintStart_toEndOf="@+id/importPriceInputLayout"
                app:layout_constraintTop_toBottomOf="@id/productPriceLabel">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/quantityInputText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberPassword" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/unitSpinnerLabel"
                style="@style/Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/unit_label"
                app:layout_constraintBottom_toBottomOf="@+id/retailPriceInputLayout"
                app:layout_constraintStart_toEndOf="@+id/retailPriceInputLayout" />
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/unitSpinner"
                style="@style/DialogInputMargin"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/retailPriceInputLayout"
                app:layout_constraintStart_toEndOf="@id/unitSpinnerLabel" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/addUnit"
                style="@style/DialogInputMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_add"
                android:tint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/unitSpinner"
                app:layout_constraintStart_toEndOf="@id/unitSpinner"
                app:layout_constraintTop_toTopOf="@+id/unitSpinner" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/retailPriceInputLayout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/importPriceInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/retail_price_hint"
                style="@style/DialogInputMargin">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberPassword"
                    android:id="@+id/retailPriceInputText"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wholesalePriceInputLayout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/retailPriceInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/wholesale_price_hint"
                android:layout_marginTop="8dp"
                style="@style/DialogInputMargin">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberPassword"
                    android:id="@+id/wholesalePriceInputText"/>
            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/verticalSeparator"
                android:layout_width="1px"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/addCategory"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="12dp"
                />

            <TextView
                android:id="@+id/productDescLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/verticalSeparator"
                android:text="@string/product_detail_info_label"
                style="@style/Header6"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:paddingTop="6dp"
                android:textColor="@color/colorPrimaryDark" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/descInputLayout"
                android:layout_width="400dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/productDescLabel"
                app:layout_constraintStart_toEndOf="@id/verticalSeparator"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/product_desc_label"
                style="@style/DialogInputMargin">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:id="@+id/descInputText"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/activeSwitchLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_active_label"
                app:layout_constraintTop_toBottomOf="@id/descInputLayout"
                app:layout_constraintStart_toEndOf="@id/verticalSeparator"
                android:layout_marginStart="16dp"
                style="@style/Subtitle1"/>
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/isActiveSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="@id/descInputLayout"
                app:layout_constraintTop_toTopOf="@id/activeSwitchLabel"
                app:layout_constraintBottom_toBottomOf="@id/activeSwitchLabel"/>
        </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>