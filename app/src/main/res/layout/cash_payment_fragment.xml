<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">
    <ImageView
        android:id="@+id/imageCash"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_cash"/>
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageCash"
        app:layout_constraintStart_toStartOf="@id/received"
        style="@style/Overline"
        android:layout_marginStart="0dp"
        android:textSize="16sp"
        android:letterSpacing="0.1"
        android:text="@string/order_total"/>
    <TextView
        android:id="@+id/received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/receivedInput"
        android:text="@string/order_payment_cash_received"
        style="@style/Overline"
        android:textSize="16sp"
        android:letterSpacing="0.1"
        android:layout_marginStart="0dp"/>
    <EditText
        android:id="@+id/receivedInput"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/received"
        app:layout_constraintBaseline_toBaselineOf="@id/received"
        android:backgroundTint="@color/colorPrimary"
        style="@style/Overline"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="12dp"
        android:textSize="16sp"
        android:letterSpacing="0.1"
        android:inputType="numberPassword"/>
    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/receivedInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/received"
        style="@style/Overline"
        android:textSize="16sp"
        android:letterSpacing="0.1"
        android:text="@string/order_payment_cash_change"/>

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/vertical_center_anchor"
        android:background="@drawable/ripple_outlined_button"
        android:drawableStart="@drawable/ic_done"
        style="@style/PositiveOutlinedButton"
        android:layout_marginTop="12dp"
        android:text="@string/order_payment_complete"/>
    <View
        android:id="@+id/vertical_center_anchor"
        android:layout_width="1px"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_center_anchor"
        android:background="@drawable/ripple_outlined_button"
        android:drawableStart="@drawable/ic_close"
        style="@style/NegativeOutlinedButton"
        android:layout_marginTop="12dp"
        android:text="@string/order_payment_cancel"/>

</android.support.constraint.ConstraintLayout>