<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/AppTheme.AppBarOverlay</item>
        <!--<item name="android:actionMenuTextColor">@color/white</item>-->
    </style>

    <style name="TextHeaderMargin">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextSubtitleMargin">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Header6" parent="TextHeaderMargin">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Header5" parent="TextHeaderMargin">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="Overline" parent="TextSubtitleMargin">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.8</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Subtitle2" parent="TextSubtitleMargin">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Subtitle1" parent="TextSubtitleMargin">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.4</item>
    </style>

    <style name="Subtitle2WithDrawable" parent="Subtitle2">
        <item name="android:drawableTint">@color/VectorColorActiveUnfocused</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SubHeaderButtonFocused">
        <item name="android:backgroundTint">@color/VectorColorActiveFocused</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="SubHeaderButtonUnfocused">
        <item name="android:backgroundTint">@color/VectorColorActiveUnfocused</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="SubHeaderButtonInactive">
        <item name="android:backgroundTint">@color/VectorColorInactive</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ProgressText" parent="Subtitle2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProgressStyle">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="DialogInputMargin">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="LongFloatingActionButton">
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/ripple_pill_button</item>
        <!--<item name="android:backgroundTint">@color/colorPrimary</item>-->
        <item name="android:drawableTint">@color/white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">12dp</item>
        <item name="android:shadowRadius">5.2</item>
    </style>

    <style name="LongAccentFloatingActionButton">
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/pill_button</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:drawableTint">@android:color/black</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:elevation">12dp</item>
        <item name="android:shadowRadius">5.2</item>
    </style>

    <style name="PositiveOutlinedButton">
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/outlined_button</item>
        <!--<item name="android:backgroundTint">@color/colorPrimary</item>-->
        <item name="android:drawableTint">@color/colorPrimary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:elevation">12dp</item>
        <item name="android:shadowRadius">5.2</item>
    </style>

    <style name="NegativeOutlinedButton">
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/outlined_button</item>
        <item name="android:backgroundTint">@color/colorStoreInActive</item>
        <item name="android:drawableTint">@color/colorStoreInActive</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/colorStoreInActive</item>
        <item name="android:elevation">12dp</item>
        <item name="android:shadowRadius">5.2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay.AppBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light"></style>

</resources>
